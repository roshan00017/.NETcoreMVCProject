@model IEnumerable<MVCProject.Models.Domain.User>

@{
    ViewData["Title"] = "Task List";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a layout file
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 {{setFont()}}">
                     User
                    </h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right {{setFont()}}">
                        <li class="breadcrumb-item">
                           
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                TaskCRM
                           
                        </li>


                        <li class="breadcrumb-item">
                        User
                        </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        
                            <div class="card-header" style="text-align:center">
                                  <a href="/User/CreateUser" class="btn btn-primary btn-sm float-left boxButton boxButton rounded-pill {{setFont()}}" title="{{trans('message.button.add_new')}}">
                                <i class="fa fa-plus-circle"></i>
                                Add New
                            </a>

                              @*   <div class="float-right">
                                    <form asp-controller="Task" asp-action="Index" method="get" class="form-inline">
                                        <div class="input-group">
                                            <input type="text" name="searchQuery" class="form-control form-control-sm" placeholder="Search...">
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-search"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div> *@



                                <div class="float-right">
                                    <form asp-controller="User" asp-action="Index" method="get" class="form-inline">
                               
                                            <div class="col-md-14">
                                                <div class="row">                      
                                                    <div class="col-6">
                                                <div class="input-group input-group-lg">
                                                    <select class="form-control select2 " style="width: 100%;" name="sortBy">
                                                        <option value="" selected disabled>Sorting By ...</option>
                                                        <option value="UserName">UserName</option>
                                                        <option value="Email">Email</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                <div class="input-group input-group-lg">
                                                 
                                                            <input type="search" class="form-control form-control-lg" placeholder="Search.." name="searchQuery">
                                                            <div class="input-group-append">
                                                                <button type="submit" class="btn btn-lg btn-default">
                                                                    <i class="fa fa-search"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    </div>
                                                </div>

                                    </form>
                                                </div>
                                            
                                            </div>
                                  
                                  
                                </div>

                           

                        </div>


                            </div>
                       @if (Model.Count() > 0)
                       {
                            <div class="card-body">
                                <table id="example1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Email</th>
                                             <th>User Name</th>
                                            <th>Action</th>
                                            <!-- Add other table headers here -->
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var user in Model)
                                        {
                                            <tr>
                                    <td>@user.UserId</td>
                                    <td>@user.Email</td>
                                    <td>@user.UserName</td>
                                                <td>
                                                    <a class="btn btn-info btn-xs roundedpill" href="/User/EditUser?id=@user.UserId"><i class="fas fa-pencil-alt"></i></a>
                                                    <a class="btn btn-danger btn-xs roundedpill" href="/User/DeleteUser?id=@user.UserId"><i class="fas fa-trash"></i></a>
                                        <a class="btn btn-primary btn-xs roundedpill" href="/User/UserDetails?id=@user.UserId"><i class="fas fa-eye"></i></a>
                                                </td>
                                                <!-- Add other table data here -->
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                @if (ViewBag.PageCount > 1)
                {
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <!-- Add pagination links here -->
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                <li class="page-item @(ViewBag.PageNumber == i ? "active" : "")">
                                    <a class="page-link" href="?pageNumber=@i&pageSize=@ViewBag.PageSize&sortBy=@ViewBag.SortBy&searchQuery=@ViewBag.SearchQuery">@i</a>
                                </li>
                            }
                        </ul>
                    </div>
                }
                       }else
                        {
                            <div class="col-md-12 {{setFont()}}"
                                 style="padding-top: 10px">
                                <label class="form-control badge badge-pill"
                                       style="text-align:  center; font-size: 18px;">
                                    <i class="fas fa-ban" style="margin-top: 6px"></i>
                                No Record Found
                                </label>
                            </div>

                        } 
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

